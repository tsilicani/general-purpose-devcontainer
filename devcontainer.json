                "kamikillerto.vscode-colorize",
                "mads-hartmann.bash-ide-vscode",
                "mechatroner.rainbow-csv",
                "meganrogge.template-string-converter",
                "mhutchie.git-graph",
                "michelemelluso.gitignore",
                "mikestead.dotenv",
                "ms-azuretools.vscode-docker",
